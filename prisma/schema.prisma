generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  dni          Int        @id
  name         String
  email        String
  gender       String
  age          Int
  cellphone    Int

  turns        Turn[]    
}

model Turn {
  id           Int        @id @default(autoincrement())
  dni          Int
  activity     String
  trainerId    Int
  timeSlot     String
  timesPerWeek Int

  // Relaciones
  user         Users       @relation(fields: [dni], references: [dni])
  trainer      Trainer    @relation(fields: [trainerId], references: [dni])
}

model Trainer {
  dni          Int        @id
  name         String
  activity     String
  timeSlot     String
  age          Int
  gender       String

  turns        Turn[]     
}

